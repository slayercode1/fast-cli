{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
  },
  "include": [
    "./declarator",
    "./controlller",
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}