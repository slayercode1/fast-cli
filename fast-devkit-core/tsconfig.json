{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "pretty": true,
    "outDir": "./lib/esm",
    "declaration": true,
    "moduleResolution": "node",
  },
  "include": [
    "./engine-template-parser",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}